%h1 Layouts in #{@event.name}

%ul.list-group.mb-4
  - @cms_layouts.each do |cms_layout|
    %li.list-group-item
      .row.w-100
        .col
          = cms_layout.name
        .col.text-right
          = link_to "Edit", [:edit, @event, cms_layout], class: 'btn btn-secondary btn-sm'
          = link_to "Delete", [@event, cms_layout], method: 'DELETE', "data-confirm" => "Are you sure you want to delete this layout?", class: 'btn btn-danger btn-sm'

= link_to "New layout", [:new, @event, :cms_layout], class: 'btn btn-primary'