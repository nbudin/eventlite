- content_for :content do
  .container-fluid
    .row
      .col-3.d-flex.flex-column
        .card.card-outline-secondary.bg-faded{style: "flex-grow: 1;"}
          .card-body
            %h3.card-title Admin
            %nav.flex-column
              = admin_nav_link_to "Event settings", edit_event_path(@event)
              = admin_nav_link_to "Pages", event_pages_path(@event)
              = admin_nav_link_to "Layouts", event_cms_layouts_path(@event)
              = admin_nav_link_to "Files", event_cms_files_path(@event)
              = admin_nav_link_to "Navigation bar", event_navigation_items_path(@event)
              = admin_nav_link_to "Tickets", event_ticket_types_path(@event)
      .col
        = yield

= render template: 'layouts/application'